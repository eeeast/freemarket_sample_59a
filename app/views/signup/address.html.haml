.signup-container
  = render 'signup/header-address'
  %main.signup-main
    %section.signup-main__container
      %h2.signup-main__head.signup-main__head--registration 発送元・お届け先住所入力
      = form_with model: @user, local: true, url: signup_credit_card_path, method: 'GET', class: 'signup-main__inner signup-main__inner--registration-form', novalidate: 'novalidate' do |f|
        .signup-main__content
          .signup-main__form-group
            = f.label 'お名前'
            %span.signup-main__form-require 必須
            = f.text_field :last_name, { class: 'signup-main__input-default', placeholder: '例) 山田' }
            = f.text_field :first_name, { class: 'signup-main__input-default', placeholder: '例) 彩' }
          .signup-main__form-group
            = f.label 'お名前カナ'
            %span.signup-main__form-require 必須
            = f.text_field :last_name_kana, { class: 'signup-main__input-default', placeholder: '例) ヤマダ' }
            = f.text_field :first_name_kana, { class: 'signup-main__input-default', placeholder: '例) アヤ' }
          .signup-main__form-group
            = f.label '郵便番号'
            %span.signup-main__form-require 必須
            = f.text_field :zip_code1, { class: 'signup-main__input-default signup-main__input-default--has-error',  placeholder: '例) 123-4567', maxlength: '8', pattern: '\d{3}-\d{4}' }
            %ul.signup-main__has-error-text
              %li 入力してください
              %li フォーマットが不適切です
          .signup-main__form-group
            = f.label '都道府県'
            %span.signup-main__form-require 必須
            .signup-main__select-wrap
              = icon 'fas', 'chevron-down'
              = f.collection_select :prefecture_id, Prefecture.all, :id, :name
              = icon 'fas', 'chevron-down'
          .signup-main__form-group
            = f.label '市区町村'
            %span.signup-main__form-require 必須
            = f.text_field :city, { class: 'signup-main__input-default signup-main__input-default--has-error', placeholder: '例) 横浜市緑区' }
            %ul.signup-main__has-error-text
              %li 入力してください
          .signup-main__form-group
            = f.label '番地'
            %span.signup-main__form-require 必須
            = f.text_field :address1, { class: 'signup-main__input-default signup-main__input-default--has-error', placeholder: '例) 青山1−1−1' }
            %ul.signup-main__has-error-text
              %li 入力してください
          .signup-main__form-group
            = f.label '建物名'
            %span.signup-main__form-arbitrary 任意
            = f.text_field :address2, { class: 'signup-main__input-default', placeholder: '例) 柳ビル103' }
          .signup-main__form-group
            = f.label '電話'
            %span.signup-main__form-arbitrary 任意
            = f.text_field :telephone, { class: 'signup-main__input-default', placeholder: '例) 09012345678' }
          = f.submit class: 'signup-main__btn-default signup-main__btn-red', value: '次へ進む'
  = render 'signup/footer'
