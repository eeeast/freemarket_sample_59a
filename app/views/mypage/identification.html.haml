              %option 熊本県
              %option 大分県
              %option 宮崎県
              %option 鹿児島県
              %option 沖縄県
        .indentification-content__group
          %label.indentification-content__zipcode 市区町村
          %span.indentification-content__arbitrary 任意
          %input{ type: 'text', name: 'zip_code', placeholder: '例）横浜市緑区', class: 'indentification-content__default' }
        .indentification-content__group
          %label.indentification-content__zipcode 番地
          %span.indentification-content__arbitrary 任意
          %input{ type: 'text', name: 'zip_code', placeholder: '例）青山1-1-1', class: 'indentification-content__default' }          
        .indentification-content__group
          %label.indentification-content__zipcode 建物名
          %span.indentification-content__arbitrary 任意
          %input{ type: 'text', name: 'zip_code', placeholder: '例）柳ビル103', class: 'indentification-content__default' }
          %button{ type: 'submit', class: 'indentification-content__button', } 登録する
        %p.indentification-content__textlink{ id: 'textinfo' }
          = link_to '本人情報の登録について', 'https://www.mercari.com/jp/help_center/article/495/'
          %i.fas.fa-chevron-right
            
