= render 'mypage/bread-crumbs'
%main.mypage-container.clearfix
  = render 'mypage/side-bar'
  .indentification-content
    %section.indentification-content__mypage
      %h2.indentification-content__head 本人情報の登録
      %form.indentification-content__form{ acotion: '/', method: 'get' }
        %div
          %p.indentification-content__info
            お客様の本人情報を登録してください。
            %br
            登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
          %p.indentification-content__textlink
            = link_to '本人確認書類のアップロードについて', 'https://www.mercari.com/jp/help_center/article/495/'
            %i.fas.fa-chevron-right
        .indentification-content__group
          %label お名前
          %p test　user
        .indentification-content__group
          %label お名前カナ
          %p テスト　ユーザー
        .indentification-content__group
          %label.indentification-content__birthday 生年月日
          %p 1192/10/05
        .indentification-content__group
          %label.indentification-content__zipcode 郵便番号
          %span.indentification-content__arbitrary 任意
          %input.indentification-content__default{ type: 'text', name: 'zip_code', placeholder: '例）1234567' }
        .indentification-content__group
          %label.indentification-content__prefecture 都道府県
          %span.indentification-content__arbitrary 任意
          .indentification-content__select
            %i.fas.fa-chevron-down
            = form_with model: @address, local: true do |f|
              = f.collection_select :prefecture_id, Prefecture.all, :id, :name, prompt: '--'
          .indentification-content__group
            %label.indentification-content__zipcode 市区町村
            %span.indentification-content__arbitrary 任意
            %input.indentification-content__default{ type: 'text', name: 'zip_code', placeholder: '例）横浜市緑区' }
          .indentification-content__group
            %label.indentification-content__zipcode 番地
            %span.indentification-content__arbitrary 任意
            %input.indentification-content__default{ type: 'text', name: 'zip_code', placeholder: '例）青山1-1-1' }          
          .indentification-content__group
            %label.indentification-content__zipcode 建物名
            %span.indentification-content__arbitrary 任意
            %input.indentification-content__default{ type: 'text', name: 'zip_code', placeholder: '例）柳ビル103' }
            %button.indentification-content__button{ type: 'submit' } 登録する
          %p.indentification-content__textlink{ id: 'textinfo' }
            = link_to '本人情報の登録について', 'https://www.mercari.com/jp/help_center/article/495/'
            %i.fas.fa-chevron-right
  = render 'toppage/sell'
= render 'toppage/footer'
