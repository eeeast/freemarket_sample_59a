.mypage-main-container
  = render 'sell/header'
  - breadcrumb :mypage
  = render 'mypage/bread-crumbs'
  %main.mypage-container.clearfix
    .mypage-content-edit__secondary-tab-container
      %h2.mypage-content-edit__tab-head
        出品した商品
      %ul.mypage-content-edit__tabs
        %li.mypage-content-edit__tab.mypage-content-edit__tab--active
          %h3
            = link_to mypage_listing_listing_path do
              出品中
        %li.mypage-content-edit__tab
          %h3
            = link_to mypage_listing_in_progress_path do
              取引中
        %li.mypage-content-edit__tab
          %h3
            = link_to mypage_listing_completed_path do
              売却済み
      - if @products.exists?
        .mypage-content-edit__tab-content
          - @products.each do |product|
            = link_to change_status_mypage_sell_index_path(product.id), class: 'mypage-content-edit__item-link' do
              .mypage-content-edit__item-image
                = image_tag product.images[0], class: 'status-mini-image', size: '48x48'
              .mypage-content-edit__item-body
                .mypage-content-edit__item-text
                  = product.name
                .mypage-content-edit__item-icons
                  %span.listing-item-count
                    = icon 'far', 'heart'
                    %span 5
                  %span.listing-item-count
                    = icon 'far', 'comment-alt'
                    %span 6
                  .mypage-content-edit__item-status
                    出品中
                  = icon 'fas', 'chevron-right'

          %ul.mypage-content-edit__history
            %li.mypage-content-edit__history-prev
              = link_to '#' do
                = icon 'fas', 'chevron-right'
            %li.mypage-content-edit__history-next
              = link_to '#' do
                = icon 'fas', 'chevron-right'
      - else
        .mypage-content-edit__tab-content
          %ul.mypage-content-edit__item-list.mypage-content-edit__item-list--active{ id: 'mypage-content-edit__item-list-transaction-now' }
            %li.mypage-content-edit__item-not-found
              出品中の商品がありません
                              
    = render 'mypage/side-bar'
  = render 'sell/footer'
  = render 'sell/sellbutton'